<!-- View HTML de notre page Contact-->

<% if @user.errors.any?%>

<div class="alert alert-danger">
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    
    <%end%>
  </ul>
</div>
<%end%>


<%= form_tag url_for(action: 'create'), method: "post" do %>  
<div class="container contact " style="height:80vh">
    <div class="row">
      <div class="col-md-3">
        <div class="contact-info">
          <h2>S'inscrire</h2>
          <h6>Rejoignez l'aventure The Gossip Project avec plus de <%= User.all.length%> membres ðŸŽ‰</h6>
        </div>
      </div>
      <div class="col-md-9">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="fname">PrÃ©nom :</label>
            <div class="col-sm-10">        
            <%= text_field_tag 'first_name', @user.first_name , class: "form-control area"%>
              </div>
          </div>

          <div class="form-group mt-3">
            <label class="control-label col-sm-2" for="lname">Nom :</label>
            <div class="col-sm-10">          
            <%= text_field_tag 'last_name', @user.last_name , class: "form-control area"%>
            </div>
          </div>

          <div class="form-group mt-3">
            <label class="control-label col-sm-2" for="lname">Email :</label>
            <div class="col-sm-10">          
            <%= email_field_tag 'email', @user.email , class: "form-control area"%>
            </div>
          </div>
            
          <div class="form-group mt-3">
            <label class="control-label col-sm-4" for="lname">Mot de passe :</label>
            <div class="col-sm-10">          
            <%= password_field_tag 'password', @user.password , class: "form-control area"%>
            </div>
          </div>
          <%= hidden_field_tag 'city_id', rand(1..10) , class: "form-control area"%>


         
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10 mt-3">
            <button type="submit" class="btn rounded-pill">S'inscrire</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="<%= root_path %>" class="btn btn-primary m-3 rounded-pill mt-4">ðŸ‘ˆ Revenir au menu</a>
  </div>




<% end %>
