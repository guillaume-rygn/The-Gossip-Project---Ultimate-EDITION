  <h2 class="mx-4">"<em><%= @user.description %></em>"</h2>
  <br>
  <h4>Informations:</h4>
  <ul style="color:#8064A2">
    <li><p>email : <%= @user.email %></p></li>
    <li><p>age : <%= @user.age %></p></li>
