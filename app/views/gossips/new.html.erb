
<!-- View HTML de notre page Contact-->

<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="container contact " style="height:80vh">
    <div class="row">
      <div class="col-md-3">
        <div class="contact-info">
          <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
          <h2>Votre Gossip</h2>
          <h6>CrÃ©ez votre potin dÃ¨s Ã  prÃ©sent</h6>
        </div>
      </div>
      <div class="col-md-9">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="fname">Titre :</label>
            <div class="col-sm-10">          
            <%= text_field_tag 'title', @gossip.title , class: "form-control area"%>
            </div>

            <% if @gossip.errors.any? %>
              <% @gossip.errors.full_messages.each do |message| %>
                <% if message == "Title can't be blank" %>
                    <div class="container alert alert-danger d-flex align-items-center p-1 mt-1" role="alert"><%= message %></div>
                <% end %>
              <% end %>
            <% end %>

            <% if @gossip.errors.any? %>
              <% @gossip.errors.full_messages.each do |message| %>
                <% if message == "Title is too short (minimum is 3 characters)" %>
                    <div class="container alert alert-danger d-flex align-items-center p-1 mt-1" role="alert"><%= message %></div>
                <% end %>
              <% end %>
            <% end %>

            <% if @gossip.errors.any? %>
              <% @gossip.errors.full_messages.each do |message| %>
                <% if message == "Title is too long (maximum is 14 characters)" %>
                    <div class="container alert alert-danger d-flex align-items-center p-1 mt-1" role="alert"><%= message %></div>
                <% end %>
              <% end %>
            <% end %>



          </div>
          <div class="form-group mt-3">
            <label class="control-label col-sm-2" for="lname">Potin :</label>
            <div class="col-sm-10">          
            <%= text_area_tag 'content', @gossip.content , class: "form-control area"%>
            </div>

            <% if @gossip.errors.any? %>
              <% @gossip.errors.full_messages.each do |message| %>
                <% if message == "Content can't be blank" %>
                    <div class="container alert alert-danger d-flex align-items-center p-1 mt-1" role="alert"><%= message %></div>
                <% end %>
              <% end %>
            <% end %>

          </div>
          
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10 mt-3">
            <%= submit_tag "Envoyer", class: 'button' %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="<%= root_path %>" class="btn btn-primary m-3 rounded-pill mt-4">ðŸ‘ˆ Revenir au menu</a>
  </div>

<% end %>



