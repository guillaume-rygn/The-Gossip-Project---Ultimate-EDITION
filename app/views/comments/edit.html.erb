<h1 style="color:#8064A2">Editer le commentaire</h1>




<%= form_for [@gossip,@comment] do |f|%>
  <div class="container contact " style="height:80vh">
    <div class="row">
      <div class="col-md-3">
        <div class="contact-info">
          <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
          <h2>Modifier votre potin</h2>
        </div>
      </div>
      <div class="col-md-9">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="fname">Titre :</label>
            <div class="col-sm-10">          
            <%= f.text_area :content, class:"form-control area"%>
            </div>          
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10 mt-3">
            <%= submit_tag "Modifier", class: 'button' %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="<%= gossip_path(@gossip.id) %>" class="btn btn-primary m-3 rounded-pill mt-4">ðŸ‘ˆ Revenir au gossip</a>
  </div>

<% end %>


