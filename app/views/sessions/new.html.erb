<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="container contact " style="height:80vh">
    <div class="row">
      <div class="col-md-3">
        <div class="contact-info">
          <h2>Connexion</h2>
        </div>
      </div>
      <div class="col-md-9">
        <div class="contact-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="fname">Email :</label>
            <div class="col-sm-10">          
            <%= email_field_tag 'email', nil , class: "form-control area"%>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-4 mt-3" for="fname">Mot de passe :</label>
            <div class="col-sm-10">          
            <%= password_field_tag 'password', nil , class: "form-control area"%>
            </div>
          </div>
          
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10 mt-3">
            <%= submit_tag "Se connecter", class: 'button' %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <a href="<%= root_path %>" class="btn btn-primary m-3 rounded-pill mt-4">ðŸ‘ˆ Revenir au menu</a>
  </div>

<% end %>
